{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 7
  },
  "extends": ["eslint:recommended"],
  "parser": "babel-eslint",
  "rules": {
    "indent": [
      "warn",
      2
    ],
    "semi": [
      "error",
      "always"
    ],
    "strict": "off",
    "no-console": "off",
    "no-var": "error",
    "prefer-const": "error",
    "require-yield": "off",
    "react/prop-types": "off",
    "react/display-name": "off",
    "comma-dangle": ["error", "never"],
    "space-before-function-paren": ["error", {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "always"
      }],
    "prefer-destructuring": "error",
    "object-curly-spacing": ["error", "always"],
    "quotes": ["error", "single", { "allowTemplateLiterals": true }]
  }
}